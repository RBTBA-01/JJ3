<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="hr_employee_view_form" model="ir.ui.view">
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hris.hr_employee_view_form_hr_manager"/>
        <field name="arch" type="xml">
            <page name="hr_settings" position="after">
                <page name="work_location" string="Work Location">
 	               <group col="5" colspan="2">
                        <field name="check_in_latitude"/><br/>
                        <field name="check_in_longitude"/>
                        <field name="check_out_latitude"/><br/>
                        <field name="check_out_longitude"/>
    	            </group>
                </page>
            </page>
        </field>
    </record>

</odoo>