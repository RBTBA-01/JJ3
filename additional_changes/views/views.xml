      <field name="name">inherit.attendance.form.rest</field>
      <field name="model">hr.attendance</field>
      <field name="inherit_id" ref="hris.hr_attendance_change_view_form" />
      <field name="arch" type="xml">
        <xpath expr="//field[@name='night_diff_ot_hours']" position="before">
