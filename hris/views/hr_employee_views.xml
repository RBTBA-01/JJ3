		    </xpath>
    		    <xpath expr="//field[@name='job_categ_id']" position="attributes">
    		    	<attribute name="invisible">1</attribute>
    		    </xpath>   		    
    		    <xpath expr="//group[@name='employee_data'][last()]/child::group[position()=1]" position="attributes">
    		    	<attribute name="invisible">1</attribute>
    		    </xpath> 
